<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.wxcloudrun.dao.AdminMapper">

    <resultMap id="BaseResultMap" type="com.tencent.wxcloudrun.model.Admin">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="employee_no" property="employeeNo"/>
        <result column="department" property="department"/>
        <result column="position" property="position"/>
        <result column="is_super_admin" property="isSuperAdmin"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 根据用户ID查询管理员信息 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT id, user_id, employee_no, department, position, is_super_admin, created_at, updated_at
        FROM admin
        WHERE user_id = #{userId}
    </select>

    <!-- 插入管理员信息 -->
    <insert id="insert" parameterType="com.tencent.wxcloudrun.model.Admin" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO admin (
            user_id, employee_no, department, position, is_super_admin, created_at, updated_at
        ) VALUES (
            #{userId}, #{employeeNo}, #{department}, #{position}, #{isSuperAdmin}, NOW(), NOW()
        )
    </insert>

    <!-- 更新管理员信息 -->
    <update id="update">
        UPDATE admin
        <set>
            <if test="employeeNo != null">employee_no = #{employeeNo},</if>
            <if test="department != null">department = #{department},</if>
            <if test="position != null">position = #{position},</if>
            <if test="isSuperAdmin != null">is_super_admin = #{isSuperAdmin},</if>
            updated_at = NOW()
        </set>
        WHERE user_id = #{userId}
    </update>

</mapper>
